{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Junior API - Debug Mode",
      "type": "debugpy",
      "request": "launch",
      "module": "junior.api",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "true",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [],
      "serverReadyAction": {
        "pattern": "Application startup complete",
        "uriFormat": "http://localhost:8000/docs",
        "action": "openExternally"
      }
    },
    {
      "name": "Junior API - Production Mode",
      "type": "debugpy",
      "request": "launch",
      "module": "junior.api",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "false",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": []
    },
    {
      "name": "Junior CLI - Review Local",
      "type": "debugpy",
      "request": "launch",
      "module": "junior.cli",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "true",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["review-local", "--base", "main"]
    },
    {
      "name": "Uvicorn - Junior API (with reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "true",
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "junior.api:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8005",
        "--reload",
        "--log-level",
        "debug"
      ],
      "serverReadyAction": {
        "pattern": "Application startup complete",
        "uriFormat": "http://localhost:8005/docs",
        "action": "openExternally"
      }
    }
  ]
}